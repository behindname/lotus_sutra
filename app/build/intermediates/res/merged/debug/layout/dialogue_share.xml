<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout 
        android:id="@+id/share_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/share_chapter"
            android:textSize="18sp"
            android:textColor="#85c4b9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            />
        <Button 
            android:id="@+id/share_btnPlus"
            android:text="@string/dialog_btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <Button 
            android:id="@+id/share_btnMinus"
            android:text="@string/dialog_btn_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />                
    </LinearLayout>
    
    <ScrollView 
        android:id="@+id/share_view"
        android:layout_below="@+id/share_topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/share_txt"
            android:textSize="16sp"
            android:textColor="#3bafaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>
    
</RelativeLayout>
